<% if book.favorited_by?(current_user) %>
  <%= link_to "/favorites/#{book.id}", method: :delete, remote: true do %>
  <font color="red">♥<%= book.favorites.count %></font>
  <% end %>
<% else %>
  <%= link_to "/favorites/#{book.id}", method: :post, remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>
