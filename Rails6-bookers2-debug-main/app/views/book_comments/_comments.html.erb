<tbody>
  <% book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to (book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.content %>
      </td>
      <td>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>
